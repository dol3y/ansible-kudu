# Do not modify these two lines. If you wish to change these variables,
# modify them in /etc/default/kudu-tserver.
--fromenv=rpc_bind_addresses
--fromenv=log_dir

--fs_wal_dir={{ kudu_slave_write_ahead_log }}
--fs_data_dirs={{ kudu_slave_data_dir }}

--tserver_master_addrs={% for server in groups['kudu-master'] %}{{ hostvars[server].ansible_eth0.ipv4.address }}:7051,{% endfor %}

--rpc_max_message_size={{ kudu_rpc_max_message_size }}
--rpc_service_queue_length={{ kudu_rpc_service_queue_length }}
--webserver_interface={{ kudu_bind_address }}
